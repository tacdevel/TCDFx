<Project Sdk="Microsoft.NET.Sdk" ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <DefineConstants>$(DefineConstants);TCDFXUI</DefineConstants>
  </PropertyGroup>

  <!-- Once I'm finished rewriting this library, this PropertyGroup will be removed. -->
  <ItemGroup>
    <Compile Remove="source\**\*.cs" />
    <Compile Include="source\TCDFx\Native\*.cs" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="$(TCDFxProjectGroupPath)TCDFx.Core\TCDFx.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="headers\**\*.h" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="$(TCDFxProjectPath)\libraries\win-x86\libui.dll">
      <Link>$(TCDFxProjectPath)\libraries\win-x86\libui.dll</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Pack>true</Pack>
      <PackagePath>runtimes\win-x86\libui.dll</PackagePath>
    </Content>
    <Content Include="$(TCDFxProjectPath)\libraries\win-x64\libui.dll">
      <Link>$(TCDFxProjectPath)\libraries\win-x64\libui.dll</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Pack>true</Pack>
      <PackagePath>runtimes\win-x64\libui.dll</PackagePath>
    </Content>
    <Content Include="$(TCDFxProjectPath)\libraries\linux-x64\libui.so">
      <Link>$(TCDFxProjectPath)\libraries\linux-x64\libui.so</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Pack>true</Pack>
      <PackagePath>runtimes\linux-x64\libui.so</PackagePath>
    </Content>
    <Content Include="$(TCDFxProjectPath)\libraries\linux-x64\libui.so.0">
      <Link>$(TCDFxProjectPath)\libraries\linux-x64\libui.so.0</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Pack>true</Pack>
      <PackagePath>runtimes\linux-x64\libui.so.0</PackagePath>
    </Content>
    <Content Include="$(TCDFxProjectPath)\libraries\osx-x64\libui.dylib">
      <Link>$(TCDFxProjectPath)\libraries\osx-x64\libui.dylib</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Pack>true</Pack>
      <PackagePath>runtimes\osx-x64\libui.dylib</PackagePath>
    </Content>
    <Content Include="$(TCDFxProjectPath)\libraries\osx-x64\libui.A.dylib">
      <Link>$(TCDFxProjectPath)\libraries\osx-x64\libui.A.dylib</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Pack>true</Pack>
      <PackagePath>runtimes\osx-x64\libui.A.dylib</PackagePath>
    </Content>
  </ItemGroup>
</Project>