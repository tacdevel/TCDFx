<Project Sdk="Microsoft.NET.Sdk" ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <DefineConstants>$(DefineConstants);TCD_NATIVE_LIBUI</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="$(TCDFxProjFolder)runtimes\win-x64\native\libui.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Pack>true</Pack>
    </Content>
    <Content Include="$(TCDFxProjFolder)runtimes\linux-x64\native\libui.so">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Pack>true</Pack>
    </Content>
    <Content Include="$(TCDFxProjFolder)runtimes\linux-x64\native\libui.so.0">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Pack>true</Pack>
    </Content>
    <Content Include="$(TCDFxProjFolder)runtimes\osx-x64\native\libui.dylib">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Pack>true</Pack>
    </Content>
    <Content Include="$(TCDFxProjFolder)runtimes\osx-x64\native\libui.A.dylib">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Pack>true</Pack>
    </Content>
  </ItemGroup>
  
  <ItemGroup>
    <None Include="$(TCDFxProjFolder)headers\ui.h" />
  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="$(TCDFxProjGroupFolder)TCD.InteropServices\TCD.InteropServices.csproj" />
  </ItemGroup>
</Project>