<Project ToolsVersion="16.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import Project="$([MSBuild]::GetPathOfFileAbove('Directory.Build.props', '$(MSBuildThisFileDirectory)../'))" />
  <PropertyGroup>
    <!-- For some reason, when $(TCDFxTestingProjectName) is 'TCDFx.Core', it loads it as 'TCDFx.Cor' and fails. -->
    <TCDFxTestingProjectReference>$(TCDFxBasePath)source\$(TCDFxProjectName.TrimEnd('Tests'))\$(TCDFxProjectName.TrimEnd('Tests')).csproj</TCDFxTestingProjectReference>
    <TCDFxTestingProjectReference Condition="$(TCDFxTestingProjectReference.EndsWith('.'))">$(TCDFxBasePath)source\$(TCDFxTestingProjectReference.TrimEnd('.'))\$(TCDFxTestingProjectReference.TrimEnd('.')).csproj</TCDFxTestingProjectReference>
    <TCDFxTestingProjectReference Condition="'$(TCDFxTestingProjectReference.EndsWith('Cor')' == 'true'">$(TCDFxBasePath)source\$(TCDFxTestingProjectReference)e\$(TCDFxTestingProjectReference)e.csproj</TCDFxTestingProjectReference>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="$(TCDFxTestingProjectReference)" />
  </ItemGroup>

  <!--TODO: Replace these with the ones we will actually use. These are just placeholders at this point. -->
  <ItemGroup>
    <PackageReference Include="xunit" Version="2.4.1" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.4.1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Etg.SimpleStubs" Version="2.4.7" />
  </ItemGroup>
</Project>