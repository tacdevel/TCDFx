<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <!-- General Repository Properties
  ===============================================================================================-->
  <PropertyGroup>
    <!-- The name of the repository, as shown in the URL. -->
    <TCDFxRepoName Condition="'$(TCDFxRepoName)' == ''">tcdfx</TCDFxRepoName>

    <!-- The type of repository (i.e. git) -->
    <!-- TODO: Find the list of allowed values. -->
    <TCDFxRepoType Condition="'$(TCDFxRepoType)' == ''">git</TCDFxRepoType>

    <!-- The repository's URL. -->
    <TCDFxRepoUrl Condition="'$(TCDFxRepoUrl)' == ''">https://github.com/tom-corwin/$(TCDFxRepoName)</TCDFxRepoUrl>

    <!-- The owner(s) of the repository. -->
    <TCDFxOwners Condition="'$(TCDFxOwners)' == ''">Thomas Corwin, et al.</TCDFxOwners>

    <!-- The repository's copyright(s). -->
    <TCDFxCopyrights Condition="'$(TCDFxCopyrights)' == ''">Copyright © 2017-2019 $(TCDFxOwners) All Rights Reserved.</TCDFxCopyrights>

    <!-- The type of license this repository is distibuted under. (i.e. MIT) -->
    <!-- TODO: Find the list of allowed values. -->
    <TCDFxLicenseType Condition="'$(TCDFxLicenseType)' == ''">MIT</TCDFxLicenseType>

    <!-- The version prefix. (i.e. 1.0.0) -->
    <TCDFxVersionPrefix Condition="'$(TCDFxVersionPrefix)' == ''">0.6.0</TCDFxVersionPrefix>

    <!-- The version suffix. (i.e. alpha-2) -->
    <!-- NOTE: This property should only be set using the command line in a CI build. -->
    <TCDFxVersionSuffix Condition="'$(TCDFxVersionSuffix)' == ''"></TCDFxVersionSuffix>

    <!-- The full version string. (i.e. 1.0.0-alpha-2) -->
    <!-- NOTE: This property should not be modified or overriden. -->
    <TCDFxVersion Condition="'$(TCDFxVersionSuffix)' != ''">$(TCDFxVersionPrefix)-$(TCDFxVersionSuffix)</TCDFxVersion>
    <TCDFxVersion Condition="'$(TCDFxVersion)' == ''">$(TCDFxVersionPrefix)</TCDFxVersion>

    <!-- A boolean determining whether the version a prerelease. -->
    <!-- NOTE: This property should not be modified or overriden. -->
    <TCDFxVersionIsPrerelease Condition="'$(TCDFxVersionSuffix)' != ''">true</TCDFxVersionIsPrerelease>
    <TCDFxVersionIsPrerelease Condition="'$(TCDFxVersionIsPrerelease)' == ''">false</TCDFxVersionIsPrerelease>
  </PropertyGroup>

  <!-- Project Properties
  ===============================================================================================-->
  <PropertyGroup>
    <!-- The name of each project. -->
    <!-- NOTE: This property should not be modified or overriden. -->
    <TCDFxProjName>$(MSBuildProjectName)</TCDFxProjName>

    <!-- The description of each project. -->
    <TCDFxProjDescription Condition="'$(TCDFxProjDescription)' == ''"></TCDFxProjDescription>

    <!-- The project's property group. -->
    <!-- NOTE: This property should not be modified or overriden. -->
    <TCDFxProjGroup Condition="$(TCDFxProjName.EndsWith('Example')) AND '$(TCDFxProjGroup)' == ''">examples</TCDFxProjGroup>
    <TCDFxProjGroup Condition="$(TCDFxProjName.EndsWith('Tool')) AND '$(TCDFxProjGroup)' == ''">tools</TCDFxProjGroup>
    <TCDFxProjGroup Condition="$(TCDFxProjName.EndsWith('Test')) AND '$(TCDFxProjGroup)' == ''">tests</TCDFxProjGroup>
    <TCDFxProjGroup Condition="'$(TCDFxProjGroup)' == ''">source</TCDFxProjGroup>

    <!-- A boolean determining whther to include the repository's license file with the project. -->
    <TCDFxProjIncludeLicenseFile Condition="'$(TCDFxProjIncludeLicenseFile)' == ''">true</TCDFxProjIncludeLicenseFile>

    <!-- A boolean determining whther to include the repository's third-party notices or aknowledgement file with the project. -->
    <TCDFxProjIncludeThirdPartyNoticesFile Condition="'$(TCDFxProjIncludeThirdPartyNoticesFile)' == ''">true</TCDFxProjIncludeThirdPartyNoticesFile>

    <!-- A boolean determining whther to include the repository's release notes file with the project. -->
    <TCDFxProjIncludeReleaseNotesFile Condition="'$(TCDFxProjIncludeReleaseNotesFile)' == ''">true</TCDFxProjIncludeReleaseNotesFile>

    <!-- A boolean determining whther the project is packable. -->
    <!-- NOTE: This property should not be modified or overriden. -->
    <TCDFxProjIsPackable Condition="'$(TCDFxProjGroup)' == 'source'">true</TCDFxProjIsPackable>
    <TCDFxProjIsPackable Condition="'$(TCDFxProjGroup)' == 'tools'">true</TCDFxProjIsPackable>
    <TCDFxProjIsPackable Condition="'$(TCDFxProjGroup)' == 'tests'">false</TCDFxProjIsPackable>
    <TCDFxProjIsPackable Condition="'$(TCDFxProjGroup)' == 'examples'">false</TCDFxProjIsPackable>
  </PropertyGroup>

  <!-- File and Folder Paths
  ===============================================================================================-->
  <PropertyGroup>
    <!-- The repository root folder. -->
    <!-- NOTE: This property should not be modified or overriden. -->
    <TCDFxFolder>$(MSBuildThisFileDirectory)</TCDFxFolder>

    <!-- The project group folder. -->
    <!-- NOTE: This property should not be modified or overriden. -->
    <TCDFxProjGroupFolder Condition="'$(TCDFxProjGroupFolder)' == ''">$(TCDFxFolder)$(TCDFxProjGroup)\</TCDFxProjGroupFolder>

    <!-- The project group's shared native folder. -->
    <!-- NOTE: This property should not be modified or overriden. -->
    <TCDFxProjGroupNativeFolder Condition="'$(TCDFxProjGroupNativeFolder)' == ''">$(TCDFxProjGroupFolder)Native\</TCDFxProjGroupNativeFolder>

    <!-- The project's folder. -->
    <!-- NOTE: This property should not be modified or overriden. -->
    <TCDFxProjFolder Condition="'$(TCDFxProjFolder)' == ''">$(TCDFxProjGroupFolder)$(TCDFxProjName)\</TCDFxProjFolder>

    <!-- The base build folder. -->
    <!-- NOTE: This property should not be modified or overriden. -->
    <TCDFxBuildFolder Condition="'$(TCDFxBuildFolder)' == ''">$(TCDFxFolder)build\</TCDFxBuildFolder>

    <!-- The project's build folder. -->
    <!-- NOTE: This property should not be modified or overriden. -->
    <TCDFxProjBuildFolder Condition="'$(TCDFxProjBuildFolder)' == ''">$(TCDFxBuildFolder)$(TCDFxProjName)\</TCDFxProjBuildFolder>

    <!-- The project's base output folder. -->
    <!-- NOTE: This property should not be modified or overriden. -->
    <TCDFxProjBuildBaseOutputFolder Condition="'$(TCDFxProjBuildBaseOutputFolder)' == ''">$(TCDFxProjBuildFolder)bin\</TCDFxProjBuildBaseOutputFolder>

    <!-- The project's output folder. -->
    <!-- NOTE: This property should not be modified or overriden. -->
    <TCDFxProjBuildOutputFolder Condition="'$(TCDFxProjBuildOutputFolder)' == ''">$(TCDFxProjBuildBaseOutputFolder)$(Configuration)\</TCDFxProjBuildOutputFolder>

    <!-- The project's base intermediate output folder. -->
    <!-- NOTE: This property should not be modified or overriden. -->
    <TCDFxProjBuildBaseIntermediateOutputFolder Condition="'$(TCDFxProjBuildBaseIntermediateOutputFolder)' == ''">$(TCDFxProjBuildFolder)obj\$(TCDFxProjName)\</TCDFxProjBuildBaseIntermediateOutputFolder>

    <!-- The project's intermediate output folder. -->
    <!-- NOTE: This property should not be modified or overriden. -->
    <TCDFxProjBuildIntermediateOutputFolder Condition="'$(TCDFxProjBuildIntermediateOutputFolder)' == ''">$(TCDFxProjBuildBaseIntermediateOutputFolder)$(Configuration)\</TCDFxProjBuildIntermediateOutputFolder>

    <!-- The project's package output folder. -->
    <!-- NOTE: This property should not be modified or overriden. -->
    <TCDFxProjBuildPackageOutputFolder Condition="'$(TCDFxProjBuildPackageOutputFolder)' == ''">$(TCDFxProjBuildFolder)pkg\</TCDFxProjBuildPackageOutputFolder>

    <!-- The project's documentation output folder. -->
    <!-- NOTE: This property should not be modified or overriden. -->
    <TCDFxProjBuildDocumentationOutputFolder Condition="'$(TCDFxProjBuildDocumentationOutputFolder)' == ''">$(TCDFxProjBuildFolder)doc\</TCDFxProjBuildDocumentationOutputFolder>

    <!-- The project's output documentation file. -->
    <!-- NOTE: This property should not be modified or overriden. -->
    <TCDFxProjBuildDocumentationFile Condition="'$(TCDFxProjBuildDocumentationFile)' == ''">$(TCDFxProjBuildDocumentationOutputFolder)$(TCDFxProjName).xml</TCDFxProjBuildDocumentationFile>

    <!-- The repository's license file. -->
    <TCDFxLicenseFile Condition="'$(TCDFxLicenseFile)' == ''">$(TCDFxFolder)LICENSE.md</TCDFxLicenseFile>

    <!-- The repository's third-party notices or aknowledgement file. -->
    <TCDFxThirdPartyNoticesFile Condition="'$(TCDFxThirdPartyNoticesFile)' == ''">$(TCDFxFolder)THIRD_PARTY_NOTICES.md</TCDFxThirdPartyNoticesFile>

    <!-- The repository's release notes file. -->
    <TCDFxReleaseNotesFile Condition="'$(TCDFxReleaseNotesFile)' == ''">$(TCDFxFolder)RELEASE_NOTES.md</TCDFxReleaseNotesFile>
  </PropertyGroup>

  <!-- Project Items
       NOTE: These items should not be modified or overriden.
  ===============================================================================================-->
  <ItemGroup>
    <Compile Include="src\**\*.cs" />
  </ItemGroup>

  <ItemGroup>
    <Compile Condition="Exists('$(TCDFxProjGroupFolder)Assembly.Common.cs')" Include="$(TCDFxProjGroupFolder)Assembly.Common.cs" Link="$(TCDFxProjFolder)src\Assembly.Common.cs"/>
    <Compile Condition="Exists('$(TCDFxProjFolder)Assembly.cs')" Include="$(TCDFxProjFolder)Assembly.cs"/>
  </ItemGroup>

  <ItemGroup Condition="'$(TCDFxProjIncludeLicenseFile)' == 'true'">
    <Content Condition="Exists('$(TCDFxLicenseFile)')" Include="$(TCDFxLicenseFile)">
      <CopyToOutputDirectory>true</CopyToOutputDirectory>
      <Visible>false</Visible>
    </Content>
  </ItemGroup>

  <ItemGroup Condition="'$(TCDFxProjIncludeThirdPartyNoticesFile)' == 'true'">
    <Content Condition="Exists('$(TCDFxThirdPartyNoticesFile)')" Include="$(TCDFxThirdPartyNoticesFile)">
      <CopyToOutputDirectory>true</CopyToOutputDirectory>
      <Visible>false</Visible>
    </Content>
  </ItemGroup>

  <ItemGroup Condition="'$(TCDFxProjIncludeReleaseNotesFile)' == 'true'">
    <Content Condition="Exists('$(TCDFxReleaseNotesFile)')" Include="$(TCDFxReleaseNotesFile)">
      <CopyToOutputDirectory>true</CopyToOutputDirectory>
      <Visible>false</Visible>
    </Content>
  </ItemGroup>
</Project>