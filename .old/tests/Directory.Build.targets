<Project ToolsVersion="16.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <TCDFxTestingProjectName>$(TCDFxProjectName.TrimEnd('.Tests'))</TCDFxTestingProjectName>
    <!-- For some reason, when $(TCDFxTestingProjectName) is 'TCDFx.Core', it loads it as 'TCDFx.Cor' and fails. -->
    <TCDFxTestingProjectName Condition="$(TCDFxTestingProjectName.EndsWith('Cor'))">$(TCDFxTestingProjectName)e</TCDFxTestingProjectName>
    <TCDFxTestingProjectReference>$(TCDFxBasePath)source\$(TCDFxTestingProjectName)\$(TCDFxTestingProjectName).csproj</TCDFxTestingProjectReference>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="$(TCDFxTestingProjectReference)" />
  </ItemGroup>

  <!--TODO: Replace these with the ones we will actually use. These are just placeholders at this point. -->
  <ItemGroup>
    <PackageReference Include="xunit" Version="2.4.1" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.4.1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>
  <Import Project="$([MSBuild]::GetPathOfFileAbove('Directory.Build.targets', '$(MSBuildThisFileDirectory)../'))" />
</Project>